<h1>All Articles</h1>

<ul id = "articles">
	<% @articles.each do |article| %>
		<li>
			<%= link_to article.title, article_path(article) %> &nbsp;
			<%= link_to "Delete",article_path(article), method: :delete %>
			<%= link_to "Edit",edit_article_path(article) %>
		</li>
	<% end %>
</ul>

<center><h2><%= link_to "Create New Article", new_article_path, class: 'article_title' %></h2></center>

